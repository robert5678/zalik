@model IEnumerable<zalik.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #121212;
            color: #f5f5f5;
        }

        h2 {
            color: #00bcd4;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #1e1e1e;
            color: #f5f5f5;
        }

            table th, table td {
                border: 1px solid #444;
                padding: 8px;
                text-align: left;
            }

            table th {
                background-color: #00bcd4;
                color: #121212;
            }

            table tr:nth-child(even) {
                background-color: #2c2c2c;
            }

        a {
            color: #00bcd4;
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h2>Products</h2>
    <a href="@Url.Action("Create", "Product")">Create New Product</a>

    <table>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = product.Id })">Delete</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>
