@model zalik.Models.Product

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #121212;
            color: #f5f5f5;
        }

        h2 {
            color: #00bcd4;
        }

        form {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            border: 1px solid #444;
            background-color: #1e1e1e;
            border-radius: 5px;
        }

        form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #00bcd4;
        }

        form input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #444;
            border-radius: 4px;
            background-color: #2c2c2c;
            color: #f5f5f5;
        }

        form button {
            padding: 10px 20px;
            background-color: #00bcd4;
            color: #121212;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        form button:hover {
            background-color: #008ba3;
        }
    </style>
</head>
<body>
    <h2>Edit Product</h2>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <label>Name</label>
        <input asp-for="Name" />
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" />
        <label>Quantity</label>
        <input asp-for="Quantity" type="number" />
        <button type="submit">Save</button>
    </form>
    <a href="@Url.Action("Index", "Product")">Back to List</a>
</body>
</html>
